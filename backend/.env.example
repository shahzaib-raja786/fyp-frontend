# Environment Variables for WearVirtually Backend

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wearvirtually
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wearvirtually?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

# Cloudinary Configuration
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS Configuration
CORS_ORIGIN=http://localhost:8081,exp://192.168.1.100:8081
# Add your React Native app URLs (Expo dev server)

# File Upload Limits
MAX_FILE_SIZE=5242880
# 5MB in bytes
